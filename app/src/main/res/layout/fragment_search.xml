<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="WeatherViewModel"
            type="mo.atef.swensonhe.weatherapp.viewmodel.WeatherViewModel">
        </variable>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/radius_border">
        <ImageButton
        android:layout_marginStart="15dp"
        android:id="@+id/arrowIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/searchTIL"
        android:src="@drawable/arrow_back_24"
        android:background="@color/transparent"/>
        <com.google.android.material.textfield.TextInputLayout
            app:layout_constraintStart_toEndOf="@+id/arrowIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/searchTIL"
            app:boxStrokeColor="@color/black"
            app:hintTextColor="@color/black"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:hint="@string/searchCity"
            android:textColorHint="@color/gray"
            android:textSize="13sp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:endIconMode="clear_text"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">
<!--            android:drawableEnd="@drawable/close_icon"-->
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editTextSearchBox"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:inputType="textPersonName|textMultiLine"
                android:maxLines="1"
                android:lines="1"
                android:gravity="top|left"
                android:background="@drawable/search_box_shape"/>
        </com.google.android.material.textfield.TextInputLayout>
        <ListView
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/searchTIL"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>